<div class="container text-center border border-secondary mt-5 border-3 rounded-3 mb-5">
  <h2 class="py-5">アカウント編集</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field py-3 row pt-1 pb-2 border-bottom border-dark">
      <div class="col-lg-4 col-12">
        <p><%= f.label :name, "ユーザー名" %></p>
      </div>
      <div class="col-lg-8 col-12">
        <p><%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名" %></p>
      </div>
    </div>
    <div class="field py-3 row pt-1 pb-2 border-bottom border-dark">
      <div class="col-lg-4 col-12">
        <p class="pt-3"><%= f.label :introduction, "自己紹介" %></p>
      </div>
      <div class="col-lg-8 col-12">
        <p class="pt-3 introduction-area"><%= f.text_area :introduction, autofocus: true %></p>
      </div>
    </div>
    <div class="field py-3 row pt-1 pb-2 border-bottom border-dark">
      <div class="col-lg-4 col-12">
        <p class="pt-3"><%= f.label :email, "メールアドレス"%></p>
      </div>
      <div class="col-lg-8 col-12">
        <p class="pt-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
      </div>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field py-3 row pt-1 pb-2 border-bottom border-dark">
      <div class="col-lg-4 col-12">
        <p class="pt-3"><%= f.label :password, "新しいパスワード" %> <i>(6文字以上)</i></p>
      </div>
      <div class="col-lg-8 col-12">
        <p class="pt-3"><%= f.password_field :password, autocomplete: "new-password" %></p>
      </div>
    </div>
    <div class="field py-3 row pt-1 pb-2 border-bottom border-dark">
      <div class="col-lg-4 col-12">
        <p class="pt-3"><%= f.label :password_confirmation, "新しいパスワード(確認用)" %></p>
      </div>
      <div class="col-lg-8 col-12">
        <p class="pt-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></p>
      </div>
    </div>
    <div class="field py-3 row pt-1 pb-2 border-bottom border-dark">
      <div class="col-lg-4 col-12">
        <p class="pt-3"><%= f.label :current_password %></p>
      </div>
      <div class="col-lg-8 col-12">
        <p class="pt-3"><%= f.password_field :current_password, autocomplete: "current-password" %></p>
      </div>
    </div>
    <div class="actions py-3 pt-1 pb-2 mt-5 mb-3">
      <%= f.submit "更新する", class: "btn btn-primary my-3" %>
    </div>
  <% end %>
</div>
