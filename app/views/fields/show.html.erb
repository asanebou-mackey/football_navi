<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 py-3 ">
      <h2><%= @field.name %></h5>
        <p><%= @field.address %></p>
      <% if @field.image.attached? %>
        <%= image_tag @field.image, class: "img-fluid" %>
      <% else %>
        <%= image_tag "no_image_yoko.jpg", class: "img-fluid" %>
      <% end %>
      <p class="mt-5"><%= @field.introduce %></p>
    </div>
    <div class="col-lg-4 py-3">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">予約</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">コメント</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">地図</button>
        </li>
      </ul>
      <div class="tab-content py-3" id="myTabContent">
        <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
          <h5>¥<%= @field.price %> / 日</h5>
          <div>
            <form>
              <div class="form-group py-2">
                <label for="start_day">開始日</label>
                <input type="date" class="form-control my-2" id="start_day">
              </div>
              <div class="form-group py-2">
                <label for="end_day">終了日</label>
                <input type="date" class="form-control my-2" id="end_day">
              </div>
              <div class="form-group py-2">
                <label for="end_day">終了日</label>
                <input type="date" class="form-control my-2" id="end_day">
              </div>
              <div class="form-group py-2">
                <label for="number">人数</label>
                <input type="number" class="form-control my-2" id="number" name="number">
              </div>
              <button type="submit" class="btn btn-primary my-3">予約する</button>
            </form>
          </div>
        </div>
        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">...</div>
        <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">...</div>
      </div>
    </div>
  </div>
</div>
